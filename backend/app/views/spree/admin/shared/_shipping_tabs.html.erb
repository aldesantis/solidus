<% content_for :tabs do %>
  <nav>
    <ul class="tabs" data-hook="admin_settings_shipping_tabs">
      <% if can?(:display, Solidus::ShippingMethod) %>
        <%= settings_tab_item plural_resource_name(Solidus::ShippingMethod), spree.admin_shipping_methods_path %>
      <% end %>

      <% if can?(:display, Solidus::ShippingCategory) %>
        <%= settings_tab_item plural_resource_name(Solidus::ShippingCategory), spree.admin_shipping_categories_path %>

      <% end %>

      <% if can?(:display, Solidus::StockLocation) %>
        <%= settings_tab_item plural_resource_name(Solidus::StockLocation), spree.admin_stock_locations_path %>
      <% end %>
    </ul>
  </nav>
<% end %>
