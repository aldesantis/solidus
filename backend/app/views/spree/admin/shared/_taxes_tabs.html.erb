<% content_for :tabs do %>
  <nav>
    <ul class="tabs" data-hook="admin_settings_taxes_tabs">
      <% if can? :display, Solidus::TaxCategory %>
        <%= settings_tab_item plural_resource_name(Solidus::TaxCategory), spree.admin_tax_categories_path %>
      <% end %>

      <% if can? :display, Solidus::TaxRate %>
        <%= settings_tab_item plural_resource_name(Solidus::TaxRate), spree.admin_tax_rates_path %>
      <% end %>
    </ul>
  </nav>
<% end %>
