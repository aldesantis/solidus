<ul class="admin-subnav" data-hook="admin_settings_sub_tabs">
  <% if can?(:admin, Solidus::Store) %>
    <%= tab :stores, label: :stores, url: spree.admin_stores_path %>
  <% end %>

  <% if can?(:display, Solidus::PaymentMethod) %>
    <%= tab :payments, url: spree.admin_payment_methods_path %>
  <% end %>

  <% if can?(:display, Solidus::TaxCategory) || can?(:display, Solidus::TaxRate) %>
    <%= tab :taxes, url: spree.admin_tax_categories_path, match_path: %r(tax_categories|tax_rates) %>
  <% end %>

  <% if can?(:display, Solidus::RefundReason) || can?(:display, Solidus::ReimbursementType) ||
    can?(:display, Solidus::ReturnReason) || can?(:display, Solidus::AdjustmentReason) %>
    <%= tab :checkout, url: spree.admin_refund_reasons_path, match_path: %r(refund_reasons|reimbursement_types|return_reasons|adjustment_reasons) %>
  <% end %>

  <% if can?(:display, Solidus::ShippingMethod) || can?(:display, Solidus::ShippingCategory) || can?(:display, Solidus::StockLocation) %>
    <%= tab :shipping, url: spree.admin_shipping_methods_path, match_path: %r(shipping_methods|shipping_categories|stock_locations) %>
  <% end %>

  <% if can?(:display, Solidus::Zone) %>
    <%= tab :zones, url: spree.admin_zones_path %>
  <% end %>
</ul>
