<%= render partial: 'spree/admin/shared/order_tabs', locals: { current: 'Payments' } %>

<% admin_breadcrumb(link_to plural_resource_name(Solidus::Payment), spree.admin_order_payments_path(@order)) %>
<% admin_breadcrumb do %>
  <%= @payment.payment_method.name %>
  <span class="pill pill-<%= @payment.state %>">
    <%= t(@payment.state, scope: 'spree.payment_states') %>
  </span>
<% end %>

<%= render partial: "spree/admin/payments/source_views/#{@payment.payment_method.partial_name}", locals: { payment: @payment.source.is_a?(Solidus::Payment) ? @payment.source : @payment } %>

<div data-hook="amount" class="align-center">
  <h5><%= label_tag nil, Solidus::Payment.human_attribute_name(:amount) %>: <span class="green"><%= @payment.display_amount.to_html %></span> </h5>
</div>

<% if @payment.capture_events.any? %>
  <fieldset class="no-border-bottom">
    <legend><%= plural_resource_name(Solidus::PaymentCaptureEvent) %></legend>
    <%= render 'spree/admin/payments/capture_events' %>
  </fieldset>
<% end %>

<% if @payment.log_entries.any? %>
  <fieldset class="no-border-bottom">
    <legend><%= plural_resource_name(Solidus::LogEntry) %></legend>
    <%= render 'spree/admin/payments/log_entries', log_entries: @payment.log_entries %>
  </fieldset>
<% end %>
